{
  "name": "aloha-sdk",
  "private": false,
  "author": "AntaraSI",
  "version": "1.2.1",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js"
    }
  },
  "bin": {
    "aloha": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antarasi/aloha-sdk.git"
  },
